<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
   android:orientation="vertical"
    android:background="#77E25F"
    tools:context=".MainActivity">

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Sign_InEmailID"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#1954BB"
        android:textColorHint="#1A48A5"
        />
    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sign_inPasswordID"
        android:hint="Password"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#1A48A5"
        android:textColorHint="#1A48A5"
        />
    <Button
        android:id="@+id/sign_inButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textStyle="bold"
        android:textSize="20sp"
android:background="@drawable/button_design"
        android:layout_margin="10dp"

        />
    <TextView
        android:id="@+id/sign_upTextID"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you not registered?Sign Up"
        android:textSize="20sp"
        android:textStyle="bold"

        android:textAppearance="@style/Widget.AppCompat.Button.Borderless.Colored"
        />
    <ProgressBar
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_inProgressbarId"/>


</LinearLayout>